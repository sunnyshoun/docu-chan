# Doc Generator Configuration
# Copy this file to .env and fill in your API key

# Required: API Key for LLM Gateway
API_KEY=your_api_key_here

# Optional: API Base URL
API_BASE_URL=https://api-gateway.netdb.csie.ncku.edu.tw

# Model Configuration
# Phase 1
CODE_READER_MODEL=gemma3:4b
IMAGE_READER_MODEL=gemma3:4b
PROJECT_ANALYZER_MODEL=gpt-oss:120b

# Phase 2
DOC_PLANNER_MODEL=gpt-oss:120b

# Phase 3
TECH_WRITER_MODEL=gpt-oss:20b
DOC_REVIEWER_MODEL=gpt-oss:20b
DIAGRAM_DESIGNER_MODEL=gpt-oss:20b
MERMAID_CODER_MODEL=gpt-oss:20b
VISUAL_INSPECTOR_MODEL=gemma3:4b

# Phase 4
PUBLISHER_MODEL=gemma3:4b

# Chart Generation Settings
CHART_MAX_ITERATIONS=5
CHART_OUTPUT_FORMAT=png
